@model List<ProductListVM>

@{
    Layout = "_Layout";
}

<div class="table-title">
    <h3 style="color: brown">Product Table</h3>
</div>
@{
    if (Model.Count > 0)
    {
        <div class="text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">Create Product</a>
        </div>

        <table class="table-fill">
            <thead>
                <tr>
                    <th class="text-left">Name</th>
                    <th class="text-left">Price</th>
                    <th class="text-left">Stock</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="table-hover">

                @foreach (var product in Model)
                {
                    <tr>
                        <td class="text-left">@product.Name</td>
                        <td class="text-left">@product.Price</td>
                        <td class="text-left">@product.Stock</td>
                        <td>
                            <a asp-action="Update" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-warning">Update Product</a>
                            <a asp-action="Remove" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-danger">Delete Product</a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    }

    else
    {
        <div class="text-danger">

            product not found
        </div>
    }
}




