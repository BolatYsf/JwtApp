@model List<CategoryListVM>

@{
    Layout = "_Layout";
}

<div class="table-title">
    <h3 style="color: brown">Category Table</h3>
</div>
@{
    if (Model.Count > 0)
    {
        <div class="text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create Category</a>
        </div>

        <table class="table-fill">
            <thead>
                <tr>
                    <th class="text-left">Id</th>
                    <th class="text-left">Definition</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="table-hover">

                @foreach (var category in Model)
                {
                    <tr>
                        <td class="text-left">@category.Id</td>
                        <td class="text-left">@category.Definition</td>
                        <td>
                            <a asp-action="Update" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-warning">Update Category</a>
                            <a asp-action="Remove" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-danger">Delete Category</a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    }

    else
    {
        <div class="text-danger">

            category not found
        </div>
    }
}




