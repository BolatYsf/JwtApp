@model CreateCategoryVM

@{ 
    Layout = "_Layout";
}


<form asp-action="Create" asp-controller="Category" method="post">
    <div class="mb-3">
        <label asp-for="@Model.Definition" class="form-label">Definition</label>
        <span asp-validation-for="@Model.Definition" class="text-danger"></span>
        <input type="text" class="form-control" asp-for="@Model.Definition">
        
    </div>
    
    <div class="mb-3 ">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
</form>


